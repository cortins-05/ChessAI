{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",

    "module": "ESNext",
    "moduleResolution": "bundler",
    "target": "ES2020",

    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,

    "strict": false,
    "esModuleInterop": true,

    "isolatedModules": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src"]
}
